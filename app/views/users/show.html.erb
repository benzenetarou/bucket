<% provide(:title, @user.name) %>
<div class="row">
  <aside class="">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name%>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <% if @user.buckets.any? %>
        <h3>buckets (<%= @user.buckets.count %>)</h3>
        <ul class="buckets">
          <%= render @buckets %>
        </ul>
        <%= will_paginate @buckets %>
      <% end %>
    </div>
</div>
